---
import AuthLayout from "../layouts/AuthLayout.astro";
---

<AuthLayout>
  <div class="w-full px-8">
    <div class="flex flex-col items-center justify-center h-full gap-4">
      <h1
        class="w-full text-xl font-bold leading-tight tracking-tight text-left text-gray-900 md:text-2xl"
      >
        Sign in
      </h1>
      <form class="w-full space-y-4 md:space-y-6">
        <div class="w-full">
          <label
            html-for="email"
            class="block mb-2 text-sm font-medium text-gray-900"
          >
            Your Email
          </label>
          <input
            type="email"
            name="email"
            id="email"
            class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5"
            placeholder="name@company.com"
            required={true}
            auto-complete="off"
          />
        </div>
        <div class="w-full">
          <label
            html-for="password"
            class="block mb-2 text-sm font-medium text-gray-900"
          >
            Password
          </label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="••••••••"
            class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5"
            required={true}
            auto-complete="off"
          />
        </div>
        <button
          type="submit"
          class="w-full text-white bg-primary hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
        >
          Sign In
        </button>
        <a
          href="/signup/"
          class="flex items-center justify-center w-full text-sm font-light text-gray-500"
        >
          <span
            class="font-medium text-right cursor-pointer text-primary-600 hover:underline"
          >
            Don’t have an account yet? Sign up
          </span>
        </a>
      </form>
    </div>
  </div>
</AuthLayout>
